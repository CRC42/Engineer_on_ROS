<launch>
	<arg name="paused" default="false"/>
	<arg name="robot_type" value="sentry"/>

	<!-- 载入世界 -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
	<arg name="paused" value="$(arg paused)"/>
		<arg name="world_name" value="$(find sp_gazebosim)/worlds/rmuc.world"/>
	</include>

	<!-- 载入哨兵模型 -->
	<param name="robot_description" command="$(find xacro)/xacro --inorder '$(find sp_description)/urdf/sentry/swerve_sentry.xacro'"/>
	<node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-z 0.4 -x 1 -y -2 -urdf -model swerve_sentry_chassis -param robot_description"/>

	<!-- 载入参数，供控制器使用 -->
	<rosparam file="$(find chassis_controller)/config/$(arg robot_type).yaml" command="load"/>

	<!-- 开关节发布 -->
	<node
		name="joint_state_publisher"
		pkg="joint_state_publisher"
		type="joint_state_publisher" />
	<node
		name="robot_state_publisher"
		pkg="robot_state_publisher"
		type="robot_state_publisher" />

</launch>
